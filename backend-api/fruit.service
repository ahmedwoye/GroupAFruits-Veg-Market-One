[Unit]
Description=FastAPI Market Backend
After=network.target

[Service]
User=ec2-user
WorkingDirectory=/home/ec2-user/GroupAFruits-Veg-Market-One/backend-api
ExecStart=/home/ec2-user/GroupAFruits-Veg-Market-One/backend-api/venv/bin/python -m uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

