pipeline {
    agent any

    environment {
        // Replace with your Bastion IP
        BASTION_IP = '34.245.161.29'
        // Replace with your private EC2 IP
        PRIVATE_EC2_IP = '10.0.1.133'
        DEPLOY_DIR = '~/GroupAFruits-Veg-Market-One'
        SSH_CRED = 'AWS_SSH_KEY' // Jenkins private key credential ID
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Prepare & Download Dependencies (Docker)') {
            steps {
                script {
                    // Create dependencies folder
                    sh 'mkdir -p dependencies'
                    // Create requirements.txt if missing
                    sh 'echo -e "fastapi\nuvicorn\nsqlalchemy\npsycopg[binary]" > backend-api/requirements.txt'
                    // Download Python packages in Docker for offline install
                    sh """
                        docker run --rm -v ${pwd()}:/app -w /app python:3.9 bash -c '
                            python -m pip install --upgrade pip
                            pip download -r backend-api/requirements.txt -d dependencies
                        '
                    """
                }
            }
        }

        stage('Deploy to Private Backend (via Bastion)') {
            steps {
                sshagent([env.SSH_CRED]) {
                    script {
                        // Step 1: Create remote folder
                        sh """
                        ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -J ec2-user@${BASTION_IP} ec2-user@${PRIVATE_EC2_IP} \\
                            'mkdir -p ${DEPLOY_DIR}'
                        """

                        // Step 2: Copy code and dependencies
                        sh """
                        scp -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -J ec2-user@${BASTION_IP} -r ./* ec2-user@${PRIVATE_EC2_IP}:${DEPLOY_DIR}/
                        """

                        // Step 3: Install dependencies & start service
                        sh """
                        ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -J ec2-user@${BASTION_IP} ec2-user@${PRIVATE_EC2_IP} '
                            cd ${DEPLOY_DIR}/backend-api

                            # Install pip if missing
                            if ! command -v pip3 &>/dev/null; then
                                sudo yum install -y python3-pip
                            fi

                            # Install dependencies from local folder
                            pip3 install --no-index --find-links=../dependencies -r requirements.txt

                            # Kill any existing uvicorn processes
                            pkill uvicorn || true

                            # Start Uvicorn in background and log output
                            nohup python3 -m uvicorn main:app --host 0.0.0.0 --port 8000 > ../fastapi.log 2>&1 &
                        '
                        """
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed. Check logs for details.'
        }
    }
}
